<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stu1"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.example.kamrul.studentlistproject.SingleStudentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/showSingleId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"

            android:hint="ID"
            android:textColor="#fff"
            android:background="#6175ff"
            android:paddingLeft="5dp"

            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/showSingleImage"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="3"

            android:src="@drawable/act2" />
    </LinearLayout>

    <TextView
        android:id="@+id/showSingleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:hint="NAME"
        android:textColor="#fff"
        android:background="#6175ff"
       android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/showSingleEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:hint="EMAIL"
        android:textColor="#fff"
        android:background="#6175ff"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:onClick="sendMail"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/showSinglePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:hint="PHONE"
        android:textColor="#fff"
        android:background="#6175ff"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:onClick="makeCall"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/showSinglAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:hint="ADDRESS"
        android:textColor="#fff"
        android:background="#6175ff"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/showSinglePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:gravity="left"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:textColor="#fff"
        android:background="#6175ff"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="DELETE"
            android:textColor="#fff"
            android:background="@drawable/mybutton"
            android:layout_margin="10dp"
            android:onClick="deleteStudent"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="UPDATE"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:onClick="editStudent"
            android:background="@drawable/mybutton"
            android:layout_weight="1"/>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEND SMS"
        android:textColor="#fff"
        android:onClick="sendSms"
        android:background="@drawable/mybutton"
        android:layout_margin="10dp"
        />


</LinearLayout>
